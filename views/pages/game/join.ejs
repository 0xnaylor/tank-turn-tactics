<%- include('../../partials/head.html') %>

<body>
    <h1>Join a game</h1>

    <form action="/game/player" method="POST">
        <p class="error"></p>

        <label for="gameId">Game code:</label>
        <input id="gameId" name="gameId"/>

        <%if (usePassphrase) { %>
            <label for="passphrase">Passphrase</label>
            <input id="passphrase" name="passphrase"/>
        <% } %>

        <%- include('../../partials/player_creation_card.ejs') %>

        <button type="submit">Join</button>
    </form>

    <script>
        const urlParams = new URLSearchParams(window.location.search);
        let error = urlParams.get('error')
        if (error) {
            switch (error) {
                case 'nonexistent': error = "Game does not exist!"; break;
                case 'gameStarted': error = "Game has already started!"; break;
                case 'server': error = "Server error! Please try again in a few minutes!"; break;
            }
        }
        document.querySelector('.error').innerHTML = error;

        let gameId = urlParams.get('game')

        if (gameId) {
            document.querySelector('#gameId').value = gameId;
        }
    </script>
</body>

